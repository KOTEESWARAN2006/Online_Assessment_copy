<!DOCTYPE html>
<html>
<head>
    <title>Invitation page</title>
    <link href="~/App_Start/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <link href="~/App_Start/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Online_Assessment/Invitation_script.js"></script>
    <link href="~/datatable_bs.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <form>
                    <input type="hidden" id="Test_id" name="Test_id" value="@ViewBag.Test_Id"/>
                    <label>Enter email addressess to invite</label>
                    <br />
                    <input type="text" id="invited_email" name="invited_email" />
                    <button type="button" onclick="Invite_for_test();" class="btn btn-primary rounded">Invite</button>
                    <br />
                    <br />
                    <table id="Invitaion_table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <td>Invitation Id</td>
                                <td>Test Id</td>
                                <td>User email</td>
                                <td>Invited date</td>
                                <td>Status</td>
                            </tr>
                        </thead>
                    </table>
                </form>
            </div>
            <div class="col-2"></div>
            <div class="col-2"></div>
        </div>
    </div>
</body>
</html>

