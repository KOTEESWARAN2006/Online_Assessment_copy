@model Online_Assessment.Models.User_credential
<!DOCTYPE html>
<html>
<head>
    <title>Login page</title>
    <link href="~/App_Start/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        @using (Html.BeginForm("User_authentication", "Project", FormMethod.Post, new { id = "user_login_form" }))
                        {
                            <div>
                                <label class="form-label">Email</label><br />
                                <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" />
                                @if (TempData["EmailError"] != null)
                                {
                                    <label class="text-danger">@TempData["EmailError"]</label>
                                }
                            </div>
                            <div>
                                <label class="form-label">Password</label><br />
                                <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" />
                                @if (TempData["PasswordError"] != null)
                                {
                                    <label class="text-danger">@TempData["PasswordError"]</label>
                                }
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-3"></div>
                                <div class="col-7">
                                    <button type="submit" class="btn btn-success">Login</button>
                                </div>
                                <div class="col-2"></div>
                            </div>
                        }
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</body>
</html>
